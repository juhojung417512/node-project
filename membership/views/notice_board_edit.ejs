<% include _header %>
<form action="/posts" method="post" class="form">
<% if(is_edit) { %>
    <h1>게시판 글 수정</h1>
    <h2>제목 : <input type="text" value="<%= notice.title || "" %>"name="title" class="form-control"></h2>
    <h2>글 내용</h2>
    <textarea name="posts" class="form-control">
        <%= notice.posts || "" %>
    </textarea>
    
<% } else { %>
    <h1>게시판 글 등록</h1>
    <h2>제목 :  <input type="text" name="title" class="form-control"></h2>
    <h2>글 내용</h2>
    <textarea name="posts" class="form-control">
    </textarea>
<% } %>
<input type="submit" class="btn btn-primaray">
</form>
<% include _footer %>